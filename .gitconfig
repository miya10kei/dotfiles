[alias]
  ad = add
  br = branch
  cf = config
  ch = checkout
  cm = commit
  df = diff
  fetch = fetch -p
  graph = log --graph --date-order --all --pretty=format:'%h %Cred%d %Cgreen%ad %Cblue%cn %Creset%s' --date=short
  lg = log --name-status
  pl = pull -p
  ps = push
  pull = pull -p
  st = status
[color]
  branch = auto
  diff = auto
  status = auto
  ui = auto
[core]
  editor = vim -c \"set fenc=utf-8\"
  excludesfile = ~/.gitignore_global
  quotepath = false
  ignorecase = false
[push]
  default = simple
[includeIf "gitdir:~/dev/work/"]
  path = ~/.gitconfig_work
[includeIf "gitdir:~/dev/private/"]
  path = ~/.gitconfig_private
[includeIf "gitdir:~/.password-store/"]
  path = ~/.gitconfig_private
[includeIf "gitdir:~/.dotfiles/"]
  path = ~/.gitconfig_private
[commit]
  template = ~/.gitmessage
[pager]
  branch = false
[include]
  path = ~/.gitconfig_ghq
