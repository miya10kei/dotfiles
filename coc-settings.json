{
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": [
        "start"
      ],
      "filetypes": [
        "sh"
      ],
      "ignoredRootPaths": [
        "~"
      ]
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": [
        "dockerfile"
      ],
      "args": [
        "--stdio"
      ]
    }
  },
  "eslint.autoFixOnSave": true,
  "eslint.filetypes": [
    "javascript",
    "typescript"
  ],
  "vetur.format.defaultFormatter.js": "prettier-eslint",
  "yank.highlight.duration": 400
}
