{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(echo:*)",
      "Bash(cat:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(gh issue view:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git log:*)",
      "Bash(git log:*)",
      "Bash(git show:*)",
      "Bash(git status:*)",
      "Bash(ls:*)",
      "Bash(npm run build:*)",
      "Bash(npm run test:*)",
      "Bash(npm run type-check:*)",
      "Bash(uv run ruff:*)",
      "List",
      "Read",
      "Search",
      "WebFetch",
      "WebSearch",
      "mcp__aws-knowledge",
      "mcp__bedrock-knowledge",
      "mcp__context7",
      "mcp__gemini-cli__googleSearch",
      "mcp__ide__getDiagnostics",
      "mcp__pd-design-system-mcp",
      "mcp__serena"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bun x ccusage statusline"
  },
  "alwaysThinkingEnabled": true,
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python ~/.dotfiles/claude/claude-hook.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python ~/.dotfiles/claude/claude-hook.py"
          }
        ]
      }
    ]
  }
}
